<Button>:
    font_size:32


<Calculator>:
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height

        TextInput:
            id:my_number
            text:"0"
            halign:"right"
            size_hint:(1,.2)
            font_size:32
        Label:
            text:"created By "
            size_hint:(1,.2)
            background_color:214/255, 230/255, 0/255,1
            canvas.before:
                Color:
                    rgba:self.background_color
                Rectangle:
                    size: self.size
                    pos:self.pos
            font_size:32
            color:(1,0,0,1)
            bold:True
            italic:True
            outline_color:(0,0,1,1)
            outline_width:2
        GridLayout:
            cols:4
            rows:5

            Button:
                text:"%"
                on_press:root.sign()
            Button:
                text:"C"
                on_press:root.clear()
            Button:
                text:"<<"
                on_press:root.remove()
            Button:
                text:"/"
                on_press:root.number('/')
            Button:
                text:"7"
                on_press:root.number(7)
            Button:
                text:"8"
                on_press:root.number(8)
            Button:
                text:"9"
                on_press:root.number(9)
            Button:
                text:"x"
                on_press: root.maths("*")
            Button:
                text:"4"
                on_press:root.number(4)
            Button:
                text:"5"
                on_press:root.number(5)
            Button:
                text:"6"
                on_press:root.number(6)
            Button:
                text:"-"
                on_press: root.maths("-")
            Button:
                text:"1"
                on_press:root.number(1)
            Button:
                text:"2"
                on_press:root.number(2)
            Button:
                text:"3"
                on_press:root.number(3)
            Button:
                text:"+"
                on_press: root.maths("+")

            Button:
                text:"+/-"
                on_press:root.change()
            Button:
                text:"0"
                on_press:root.number(0)
            Button:
                text:"."
                on_press:root.dot()
            Button:
                text:"="
                on_press:root.evalnumber()

